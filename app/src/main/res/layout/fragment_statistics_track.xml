<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.baidu.mapapi.map.MapView
        android:id="@+id/statisticsTrackMapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true" />

    <TextView
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dip"
        android:background="#64a3c78a"
        android:minWidth="100dip"
        android:orientation="vertical"
        android:padding="2dp"
        android:textAlignment="center"
        android:id="@+id/statisticsDetailTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#64a3c78a"
        android:padding="2dp"
        android:layout_marginBottom="5dip"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#64a3c78a"
            android:padding="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtLastTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="38:31"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/txtDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="5.25 公里"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#64a3c78a"
            android:padding="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtAvgPace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="7:20/km"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/txtCalory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="508 大卡"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>